# IMPORTANT: Copy this file to .env and update with your actual values
# DO NOT commit .env to version control - it should be in .gitignore
# 
# To create your .env file:
# PowerShell: Copy-Item .env.example .env
# Then edit .env with your actual API keys and secrets

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/contentsyndicate
POSTGRES_DB=contentsyndicate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
SECRET_KEY=your_secret_key_here
ENVIRONMENT=development
DEBUG=true

# API Keys
GOOGLE_AI_API_KEY=your_google_ai_api_key
SENDGRID_API_KEY=your_sendgrid_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Social Media APIs
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ContentSyndicate/1.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
